// Prisma Schema for LearnLens - AI-Powered Tutoring App

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model with password auth
model User {
  id               String    @id @default(cuid())
  name             String?
  email            String    @unique
  password         String // Hashed password
  preferredModel   String    @default("gemini-2.5-flash-lite") // AI model preference
  maxTokens        Int       @default(1000) // Max tokens for generation
  maxContext       Int       @default(500000) // Max characters of content sent to AI (500k for HaluAI Gateway)
  customApiUrl     String? // Custom API URL (optional)
  customApiKey     String? // Custom API key (optional, encrypted)
  customModel      String? // Custom model name for custom API (e.g., "gpt-4o", "claude-3-opus")
  customMaxTokens  Int       @default(1000) // Max tokens for custom API
  customMaxContext Int       @default(8000) // Max context for custom API
  emailVerified    DateTime?
  image            String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  accounts        Account[]
  sessions        Session[]
  materials       Material[]
  studySessions   StudySession[]
  quizAttempts    QuizAttempt[]
  chatSessions    ChatSession[]
  exploreContents ExploreContent[]
  materialLikes   MaterialLike[]
  exploreLikes    ExploreLike[]
  exploreComments ExploreComment[]

  @@map("users")
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Verification Token for email verification
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Learning Material - uploaded by user
model Material {
  id          String    @id @default(cuid())
  title       String
  content     String?   @db.Text // Extracted text from PDF or raw text (optional for research mode)
  description String?   @db.Text // Initial question/description for research mode
  type        String // "pdf", "text", or "research"
  isPublic    Boolean   @default(false)
  publishedAt DateTime?
  views       Int       @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Owner
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Forking
  forkedFromId String?
  forkedFrom   Material?  @relation("MaterialForks", fields: [forkedFromId], references: [id])
  forks        Material[] @relation("MaterialForks")

  // Relations
  messages            Message[]
  quizzes             Quiz[]
  studySessions       StudySession[]
  quizAttempts        QuizAttempt[]
  summary             String?               @db.Text // AI-generated summary
  glossary            String?               @db.Text // AI-generated glossary (JSON)
  flashcards          String?               @db.Text // AI-generated flashcards (JSON)
  learningEvaluations LearningEvaluation[]
  chatSessions        ChatSessionMaterial[]
  likes               MaterialLike[]
  exploreContent      ExploreContent?

  @@map("materials")
}

// Public Explore Content - Snapshot of public materials
model ExploreContent {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  content     String?  @db.Text
  type        String
  forksCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  originalMaterialId String   @unique // One snapshot per material
  originalMaterial   Material @relation(fields: [originalMaterialId], references: [id], onDelete: Cascade)

  likes    ExploreLike[]
  comments ExploreComment[]

  @@map("explore_contents")
}

// Explore Interactions
model ExploreLike {
  id               String         @id @default(cuid())
  userId           String
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  exploreContentId String
  exploreContent   ExploreContent @relation(fields: [exploreContentId], references: [id], onDelete: Cascade)
  createdAt        DateTime       @default(now())

  @@unique([userId, exploreContentId])
  @@map("explore_likes")
}

model ExploreComment {
  id               String         @id @default(cuid())
  content          String         @db.Text
  userId           String
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  exploreContentId String
  exploreContent   ExploreContent @relation(fields: [exploreContentId], references: [id], onDelete: Cascade)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@map("explore_comments")
}

// Material Likes (for direct material interaction if needed)
model MaterialLike {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  materialId String
  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, materialId])
  @@map("material_likes")
}

// Chat Message - conversation history
model Message {
  id        String   @id @default(cuid())
  role      String // "user" or "assistant"
  content   String   @db.Text
  createdAt DateTime @default(now())

  // Parent material
  materialId String
  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@map("messages")
}

// Quiz - generated questions for a material
model Quiz {
  id        String   @id @default(cuid())
  question  String   @db.Text
  options   String[] // Array of answer options
  answer    Int // Index of correct answer
  hint      String?  @db.Text // Helpful clue to guide thinking
  createdAt DateTime @default(now())

  // Parent material
  materialId String
  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@map("quizzes")
}

// Learning Analytics - track study sessions
model StudySession {
  id        String    @id @default(cuid())
  startTime DateTime  @default(now())
  endTime   DateTime?
  duration  Int? // Duration in seconds

  // What was studied
  materialId String
  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  // Who studied
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("study_sessions")
}

// Quiz Attempt - track quiz performance
model QuizAttempt {
  id             String @id @default(cuid())
  score          Int // Correct answers
  totalQuestions Int // Total questions
  percentage     Float // Score percentage

  // Which material
  materialId String
  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  // Who attempted
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("quiz_attempts")
}

// Learning Evaluation - AI-generated learning progress evaluation
model LearningEvaluation {
  id             String @id @default(cuid())
  content        String @db.Text // AI evaluation content
  score          Int // Understanding score 1-10
  questionsCount Int // Number of questions at time of evaluation
  quizAvgScore   Float? // Quiz average score at time of evaluation

  // Which material
  materialId String
  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  // Who was evaluated
  userId String

  createdAt DateTime @default(now())

  @@map("learning_evaluations")
}

// Chat Session - multi-material chat sessions
model ChatSession {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Owner
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  materials ChatSessionMaterial[]
  messages  ChatSessionMessage[]

  @@map("chat_sessions")
}

// Junction table for ChatSession and Material (many-to-many)
model ChatSessionMaterial {
  id            String      @id @default(cuid())
  chatSessionId String
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  materialId    String
  material      Material    @relation(fields: [materialId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())

  @@unique([chatSessionId, materialId])
  @@map("chat_session_materials")
}

// Chat Session Message - conversation history for multi-material chat
model ChatSessionMessage {
  id            String      @id @default(cuid())
  role          String // "user" or "assistant"
  content       String      @db.Text
  createdAt     DateTime    @default(now())
  chatSessionId String
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)

  @@map("chat_session_messages")
}
